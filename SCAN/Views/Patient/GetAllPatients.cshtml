@using SCAN.Enums;
@model IEnumerable<PatientVM>
@{
    ViewData["Title"] = "GetAllPatients";
}
<div class="container">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Form/</span> All patients</h4>
	<hr />
	<h5 class="mb-4">
		<a class="float-end d-inline btn btn-dark mb-4" asp-action="CreateAppointment" asp-controller="Patient">
			<i class="bi bi-person-fill-add me-1"></i> Create Appointment
		</a>
	</h5>

	<table id="patients" class="table table-striped table-bordered compact" style="color: black; margin-top: 15px">
		<thead>
			<tr class="fw-bold table-active">
				<th></th>
				<th class="text-center">Patient ID</th>
				<th class="text-center">First Name</th>
				<th class="text-center">Last Name</th>
				<th class="text-center">Arabic Name</th>
				<th class="text-center">Address</th>
				<th class="text-center">phone</th>
				<th class="text-center">Gender</th>
				<th class="text-center">Scan Type</th>
				<th class="text-center">Reference</th>
				<th class="text-center">Type of Check</th>
				<th class="text-center">Date of Appointmnet</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td></td>
					<td>@item.PatinetID</td>
					<td>@item.FirstName</td>
					<td>@item.LastName</td>
					<td class="text-center">@(item.ArabicFirstName + " " + item.ArabicLastName)</td>
					<td>@(item.City + "_" + item.Government)</td>
					<td>@item.Phone</td>
					<td>@item.Gender</td>
					<td>@item.ScanName</td>
					<td>@Enum.GetName(typeof(References),item.ReferenceID)</td>
					<td>@Enum.GetName(typeof(CheckType),item.CheckTypeID)</td>
					<td class="text-center">@item.DateofAppointment?.ToString("dd-MM-yyyy")</td>
					<td>
						<a class="badge bg-label-success " ><i class="bi bi-pencil-square"></i> </a>
						<a class="badge bg-label-primary " ><i class="bi bi-eye"></i></a>
						<a class="badge bg-label-danger " onclick="confirmDelete()"><i class="bi bi-trash"> </i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<br />
	<br />
</div>

